<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.chefbook.activities.RecipeDetailActivity">
    <TextView
        android:id="@+id/recipe_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recipe_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/recipe_detail_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_add_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_recipe" />
            <Button
                android:id="@+id/button_remove_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remove_recipe"
                android:visibility="gone"/>
            <Button
                android:id="@+id/button_add_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_to_list"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/collapse_expand_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <TextView
                android:id="@+id/recipe_detail_ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/ingredients_title"/>
            <TextView
                android:id="@+id/textview_plus_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/collapse"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/recipe_detail_ingredients_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <TextView
            android:id="@+id/recipe_detail_instructions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions_title"/>
        <TextView
            android:id="@+id/recipe_detail_instructions_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions_body"/>
    </LinearLayout>
</LinearLayout>