<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SectionHeader" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="LongTitle" parent="@style/TextAppearance.AppCompat.Title">

    </style>
    <style name="VeryLongTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="VeryVeryLongTitle" parent="@style/TextAppearance.AppCompat.Subhead">

    </style>

</resources>
